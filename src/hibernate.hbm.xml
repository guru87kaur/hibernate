<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="Employee" table="emp" >
  <id name="empid" type="integer" column="empid" >
      <generator class="assigned" />
      
  </id>
  <property name="name" column ="ename" type="string" />
  <property name="salary" column ="salary" type="float" />
  <property name="mobile" column="mobile" type="long"/>
  <property name ="emailid" column ="emailid" type="string"/>
  </class>
</hibernate-mapping>
